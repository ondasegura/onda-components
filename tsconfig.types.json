{
    "compilerOptions": {
        "moduleResolution": "bundler",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "jsx": "react-jsx",
        "module": "ESNext",
        "target": "ESNext",
        "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
