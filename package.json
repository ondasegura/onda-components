{
    "name": "minha-lib-componentes",
    "version": "1.0.4",
    "description": "Biblioteca de componentes React com Tailwind CSS",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "type": "module",
    "sideEffects": [
        "**/*.css"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/types/index.d.ts"
        },
        "./styles.css": "./dist/styles.css",
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "npm run build:clean && npm run build:types && npm run build:lib && npm run build:css",
        "build:clean": "rimraf dist",
        "build:types": "tsc --emitDeclarationOnly --declarationDir dist/types",
        "build:lib": "rsbuild build",
        "build:css": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles.css --minify",
        "dev": "rsbuild dev",
        "preview": "rsbuild preview",
        "prepublishOnly": "npm run build",
        "test:build": "npm run build && node -e \"console.log('Build concluÃ­do com sucesso!')\"",
        "check-types": "tsc --noEmit",
        "build:watch": "npm run build:types -- --watch"
    },
    "peerDependencies": {
        "react": ">=16.8.0",
        "react-dom": ">=16.8.0"
    },
    "devDependencies": {
        "@rsbuild/core": "^1.0.0",
        "@rsbuild/plugin-react": "^1.0.0",
        "@tailwindcss/postcss": "^4.1.10",
        "@types/node": "^20.0.0",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "autoprefixer": "^10.4.0",
        "postcss": "^8.4.0",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "rimraf": "^5.0.10",
        "tailwindcss": "^4.1.10",
        "typescript": "^5.0.0"
    },
    "keywords": [
        "react",
        "components",
        "tailwindcss",
        "ui",
        "biblioteca",
        "componentes"
    ],
    "author": "Seu Nome <seu@email.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/seu-usuario/minha-lib-componentes.git"
    },
    "bugs": {
        "url": "https://github.com/seu-usuario/minha-lib-componentes/issues"
    },
    "homepage": "https://github.com/seu-usuario/minha-lib-componentes#readme"
}
