// tsconfig.json
{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        // "isolatedModules": true,
        "rootDir": "src",
        "emitDeclarationOnly": false
    },
    // "include": ["src/**/*", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "postcss.config.cjs"]
    "include": ["src/**/*"]
}
