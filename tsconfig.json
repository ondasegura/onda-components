{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "jsx": "react-jsx",
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "strict": true,
        "noUnusedLocals": false, // Ignora variáveis locais não utilizadas
        "noUnusedParameters": false, // Ignora parâmetros não utilizados
        "noImplicitReturns": false, // Permite funções sem return explícito em todos os caminhos
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*", "dev/*"]
        }
    },
    "include": ["src", "dev", "**/*.ts", "**/*.tsx", "**/*.d.ts", "types.d.ts"],
    "exclude": ["node_modules", "dist"]
}
